#!/bin/bash
if [ -f .mainurl ]; then
    mainurl=$(cat .mainurl)
    if [ "$mainurl" == "" ]; then
        echo the .mainurl file is empty. Please set the url manually
    else
        wp option set home $mainurl
        if [ $? == 0 ]; then
        wp option set siteurl $mainurl
        wp option get siteurl
        wpht
        rm .mainurl
        else
        echo there was a problem
        fi
    fi
else
echo there is no .mainurl file
fi
